#include <mekanamu.h>
#include <math.h>
#include <stdio.h>

signed char halfX(uint8_t X){
	if(X > 0x7f - TOLE_VALUE && X < 0x7f + TOLE_VALUE){
		return 0;
	}else {
		if(X - 0x7f < -0x7f){
			return -0x7f;
		}else if(X - 0x7f > 0x7f){
			return 0x7f;
		}else {
			return X - 0x7f;
		}
	}
}

signed char halfY(uint8_t Y){
	if(Y > 0x7f - TOLE_VALUE && Y < 0x7f + TOLE_VALUE){
		return 0;
	}else {
		if(0x7f - Y < -0x7f){
			return -0x7f;
		}else if(0x7f - Y > 0x7f){
			return 0x7f;
		}else {
			return 0x7f - Y;
		}
	}
}

uint8_t Move(uint8_t *Udata,uint8_t stX,uint8_t stY){ // Udata[0] 左上 Udata[1] 右上 Udata[2] 左下 Udata[3] 右下
	signed char PosX;
	signed char PosY;
	unsigned float Z;
	PosX = halfX(stX);
	PosY = halfY(stY);
	Z = sqrt(pow(PosX,2) + pow(PosY,2));
	printf("(%+4d,%+4d) %f\r\n",PosX,PosY,Z);
}
