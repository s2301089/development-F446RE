#ifndef INC_USART_ARDUINO_H_
#define INC_USART_ARDUINO_H_

typedef struct{
	uint8_t LX = 0x80;
	uint8_t LY = 0x80;
	uint8_t L2 = 0x00;
	uint8_t RX = 0x80;
	uint8_t RY = 0x80;
	uint8_t R2 = 0x00;

	bool TRIANGLE = 0;
	bool CIRCLE = 0;
	bool CROSS = 0;
	bool SQUARE = 0;
	bool UP = 0;
	bool RIGHT = 0;
	bool DOWN = 0;
	bool LEFT = 0;
	bool L1 = 0;
	bool L3 = 0;
	bool R1 = 0;
	bool R3 = 0;
	bool SHARE = 0;
	bool OPTION = 0;
	bool PS = 0;
	bool TOUCHPAD = 0;
} getdata;

#define REV_SIZE 11
#define WAIT 10
#define TIMEOUT_MAX 10

#endif /* INC_USART_ARDUINO_H_ */
